<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="LOG_PATH" source="log.config.path"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} %highlight(%-5level) %magenta([%thread]) %cyan(%logger{36}.%M) - %msg%n
            </Pattern>
        </layout>
    </appender>

    <appender name="saveToFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/sojemap-application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <!-- <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy"> -->
            <fileNamePattern>
                ${LOG_PATH}/archived/sojemap-application.log_%d{dd-MM-yyyy}.log
                <!-- ${LOG_PATH}/archived/sojemap-application.log_%d{dd-MM-yyyy}.%i.log # Creating Log Index -->
            </fileNamePattern>
            <maxHistory>30</maxHistory>
            <maxFileSize>5MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{35} %M - %msg%n</pattern>
        </encoder>
    </appender>

    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>

    <springProfile name="stage">
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="saveToFile"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="saveToFile"/>
        </root>
    </springProfile>
</configuration>
